<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<% @users.each do |user| %>
			<div class="card">
				<div class="card-body">
					<div class="media">
					  <%= image_tag user.avatar_url(:thumb), class: "rounded-circle", style: "margin-right: 10px" %>
					  <div class="media-body">
						    <p>
						    	<%= user.name %> @<%= link_to user.username, show_user_path(id: user.id) %>
						    </p>
						    <p class="card-text">
						    	Name: <%= user.name %> | Location: <%= user.location %>
					    	</p>
					  </div>
					</div>
				</div>
			  <% if current_user.following.include?(user.id) %>
		      <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary unfollow-btn" %>
		    <% elsif current_user.id != user.id %>
		      <%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
		    <% end %>
			</div>
			<br>
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>