<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<%= render 'epicenter/newtweet' %>
		<hr>
	  <% @following_tweets.each do |tweet| %>
	  	<div class="card">
			  <div class="card-body">
			  	<div class="media">
					  <%= image_tag tweet.user.avatar_url(:thumb), class: "rounded-circle", style: "margin-right: 10px" %>
					  <div class="media-body">
						    <p>
						    	<%= tweet.user.name %> @<%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %> â€¢ <%= time_ago_in_words(tweet.created_at) %> ago
						    </p>
						    <%= tweet.message.html_safe %>
					  </div>
					</div>
			  </div>
			</div>
	  <% end %>
	</div>
</div>
