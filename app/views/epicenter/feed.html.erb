<h1 class="text-center">@<%= current_user.username %>'s Twitter Feed</h1>
<br>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
	  <% @following_tweets.each do |tweet| %>
	  	<div class="card">
			  <div class="card-body">
			    <h5 class="card-title">
			    	<span><%= image_tag tweet.user.avatar.url, class: "img-thumbnail thumb-sm" %></span>
			    	@<%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %>
			    </h5>
			    <p class="card-text"><%= tweet.message.html_safe %></p>
			    <a href="#" class="card-link">Card link</a>
			    <a href="#" class="card-link">Another link</a>
			  </div>
			</div>
			<br>
	  <% end %>
	</div>
</div>

<p class="text-center"><%= link_to "Compose a Tweet", new_tweet_path %></p>
<br>
